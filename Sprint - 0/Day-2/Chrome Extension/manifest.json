{
  "manifest_version": 2,
  "name": "Custom Page Styling",
  "version": "1.0",
  "description": "Empower users to customize the appearance of web pages they visit.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon.png",
      "48": "/icon.png",
      "128": "/icon.png"
    }
  },
  "icons": {
    "16": "/icon.png",
    "48": "/icon.png",
    "128": "/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon.png",
      "48": "/icon.png",
      "128": "/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
